<AnchorPane maxHeight="250.0" maxWidth="400.0" minHeight="275.0" minWidth="400.0" prefHeight="250.0" prefWidth="400.0" style="-fx-border-color: darkcyan; -fx-background-color: white;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.FormularioTarefaController">
