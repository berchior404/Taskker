                  <Cursor fx:constant="HAND" />
               </cursor>
               <graphic>
                  <ImageView fitHeight="25.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/save-icon.png" />
                     </image>
                  </ImageView>
               </graphic>
               <tooltip>
                  <Tooltip text="Salvar">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Tooltip>
               </tooltip></Button>
         </children>
      </HBox>
   </children>
