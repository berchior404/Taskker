      <GridPane layoutX="51.0" layoutY="14.0" prefHeight="175.0" prefWidth="300.0" AnchorPane.topAnchor="10.0">
        <columnConstraints>
          <ColumnConstraints halignment="LEFT" maxWidth="145.0" minWidth="40.0" prefWidth="68.0" />
          <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" maxWidth="320.0" minWidth="200.0" prefWidth="232.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints maxHeight="150.0" minHeight="0.0" prefHeight="50.0" vgrow="SOMETIMES" />
            <RowConstraints maxHeight="150.0" minHeight="0.0" prefHeight="50.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label prefHeight="35.0" prefWidth="75.0" text="Nome da Tarefa:" wrapText="true" />
            <Label prefHeight="51.0" prefWidth="66.0" text="Data de Criação:" wrapText="true" GridPane.rowIndex="1" />
            <VBox maxHeight="50.0" minHeight="50.0" prefHeight="49.0" prefWidth="181.0" GridPane.columnIndex="1">
               <children>
                  <TextField fx:id="txtNome">
                     <cursor>
                        <Cursor fx:constant="TEXT" />
                     </cursor>
                  </TextField>
                  <Label fx:id="labelErroNome" prefHeight="13.0" prefWidth="247.0" textFill="RED">
                     <font>
                        <Font name="System Bold" size="9.0" />
                     </font>
                  </Label>
               </children>
               <padding>
                  <Insets top="12.0" />
               </padding>
            </VBox>
            <TextField fx:id="txtDataCriacao" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="1">
               <cursor>
                  <Cursor fx:constant="TEXT" />
               </cursor></TextField>
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
      </GridPane>
      <HBox layoutX="113.0" layoutY="205.0" prefHeight="40.0" prefWidth="161.0" spacing="75.0" AnchorPane.bottomAnchor="15.0">
